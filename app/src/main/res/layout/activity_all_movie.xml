<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/violet">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_background"
            android:orientation="vertical"
            android:padding="6dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="80dp"> <!-- tránh đè ImageView -->

            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Browse"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/choices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Movies in CineStar"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/all_movie_ava"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ava"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp" />
    </RelativeLayout>

    <!-- SearchView -->
    <SearchView
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/container"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/searchview_background"
        app:queryBackground="@android:color/transparent"
        android:iconifiedByDefault="false" />

    <!-- Section Title -->
    <RelativeLayout
        android:id="@+id/tv_view_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_bar"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">



            <TextView
                android:id="@+id/allMovies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Movies"
                android:layout_marginStart="20dp"
                android:textSize="25sp"
                android:textColor="@color/yellow" />


        <TextView
            android:id="@+id/viewAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:text="Filter"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/gradient_blue" />
    </RelativeLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_search_all_movies"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/tv_view_all"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:clipToPadding="false"
        tools:itemCount="5"
        tools:listitem="@layout/item_all_movies" />
</RelativeLayout>
